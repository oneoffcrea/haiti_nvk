{% extends "base.html.twig" %}

{% block title %}Sportifs — Haiti Sport Network
{% endblock %}

{% block body %}

	<div
		class="container-fluid">

		{# Barre de recherche full width #}
		<section class="bg-dark text-white py-5 text-center">
			<div class="container px-3">
				<h2 class="mb-4">Référencez et découvrez les joueurs haïtiens de différents clubs</h2>
				<div class="col-lg-6 mx-auto">
					<input type="text" id="joueurSearch" class="form-control form-control-lg" placeholder="Rechercher un joueur par nom, poste, club...">
				</div>
			</div>
		</section>

		{# Slider des joueurs (scroll horizontal responsive) #}
		<section class="py-5">
			<div class="container px-3">
				<h2 class="text-center mb-5">Nos Sportifs</h2>
				<div class="d-flex flex-nowrap overflow-auto gap-3 pb-3" style="scrollbar-width: thin;">

					<div class="player-card flex-shrink-0" style="width: 280px;">
						<div class="card h-100">
							<img src="{{ asset('assets/img/player1.jpg') }}" class="card-img-top" alt="Joueur 1">
							<div class="card-body">
								<h5 class="card-title">Joueur 1</h5>
								<p class="card-text small">Poste : Défenseur</p>
								<p class="card-text small text-muted">Catégorie : Football</p>
								<a href="#" class="btn btn-sm btn-primary w-100">Voir le profil</a>
							</div>
						</div>
					</div>

					<div class="player-card flex-shrink-0" style="width: 280px;">
						<div class="card h-100">
							<img src="{{ asset('assets/img/player2.jpg') }}" class="card-img-top" alt="Joueur 2">
							<div class="card-body">
								<h5 class="card-title">Joueur 2</h5>
								<p class="card-text small">Poste : Milieu</p>
								<p class="card-text small text-muted">Catégorie : Handball</p>
								<a href="#" class="btn btn-sm btn-primary w-100">Voir le profil</a>
							</div>
						</div>
					</div>

					<div class="player-card flex-shrink-0" style="width: 280px;">
						<div class="card h-100">
							<img src="{{ asset('assets/img/player3.jpg') }}" class="card-img-top" alt="Joueur 3">
							<div class="card-body">
								<h5 class="card-title">Joueur 3</h5>
								<p class="card-text small">Poste : Attaquant</p>
								<p class="card-text small text-muted">Catégorie : Football</p>
								<a href="#" class="btn btn-sm btn-primary w-100">Voir le profil</a>
							</div>
						</div>
					</div>

					<div class="player-card flex-shrink-0" style="width: 280px;">
						<div class="card h-100">
							<img src="{{ asset('assets/img/player4.jpg') }}" class="card-img-top" alt="Joueur 4">
							<div class="card-body">
								<h5 class="card-title">Joueur 4</h5>
								<p class="card-text small">Poste : Gardien</p>
								<p class="card-text small text-muted">Catégorie : Handball</p>
								<a href="#" class="btn btn-sm btn-primary w-100">Voir le profil</a>
							</div>
						</div>
					</div>

				</div>
			</div>
		</section>

		{# Fiche joueur + formulaire contact #}
		<section class="py-5 bg-light">
			<div class="container px-3">
				<div
					class="row g-5">

					{# Fiche joueur #}
					<div class="col-lg-6">
						<div class="card h-100">
							<img src="{{ asset('assets/img/player_detail.jpg') }}" class="card-img-top" alt="Photo Joueur">
							<div class="card-body">
								<h4 class="card-title">Joueur 1</h4>
								<ul class="list-unstyled">
									<li class="mb-2">
										<strong>Poste :</strong>
										Défenseur</li>
									<li class="mb-2">
										<strong>Catégorie :</strong>
										Football</li>
									<li class="mb-2">
										<strong>Age :</strong>
										25 ans</li>
									<li class="mb-2">
										<strong>Taille :</strong>
										1m80</li>
								</ul>
							</div>
						</div>
					</div>

					{# Formulaire contact #}
					<div class="col-lg-6">
						<div class="card h-100">
							<div class="card-body">
								<h4 class="card-title mb-4">Demande de contact</h4>
								<form>
									<div class="mb-3">
										<label class="form-label">Nom</label>
										<input type="text" class="form-control" placeholder="Votre nom">
									</div>
									<div class="mb-3">
										<label class="form-label">Email</label>
										<input type="email" class="form-control" placeholder="Votre email">
									</div>
									<div class="mb-3">
										<label class="form-label">Message</label>
										<textarea class="form-control" rows="4" placeholder="Votre message"></textarea>
									</div>
									<button type="submit" class="btn btn-primary w-100">Envoyer</button>
								</form>
							</div>
						</div>
					</div>

				</div>
			</div>
		</section>

		{# Galerie photos #}
		<section class="bg-dark text-white py-5">
			<div class="container px-3">
				<h2 class="text-center mb-5">Galerie du joueur</h2>
				<div class="row g-3">
					<div class="col-6 col-md-4 col-lg-3">
						<div class="gallery-img">
							<img src="{{ asset('assets/img/gallery1.jpg') }}" class="img-fluid rounded" alt="Photo 1">
						</div>
					</div>
					<div class="col-6 col-md-4 col-lg-3">
						<div class="gallery-img">
							<img src="{{ asset('assets/img/gallery2.jpg') }}" class="img-fluid rounded" alt="Photo 2">
						</div>
					</div>
					<div class="col-6 col-md-4 col-lg-3">
						<div class="gallery-img">
							<img src="{{ asset('assets/img/gallery3.jpg') }}" class="img-fluid rounded" alt="Photo 3">
						</div>
					</div>
					<div class="col-6 col-md-4 col-lg-3">
						<div class="gallery-img">
							<img src="{{ asset('assets/img/gallery4.jpg') }}" class="img-fluid rounded" alt="Photo 4">
						</div>
					</div>
					<div class="col-6 col-md-4 col-lg-3">
						<div class="gallery-img">
							<img src="{{ asset('assets/img/gallery5.jpg') }}" class="img-fluid rounded" alt="Photo 5">
						</div>
					</div>
				</div>
			</div>
		</section>

	</div>

{% endblock %}
