{% extends 'base.html.twig' %}

{% block title %}Administrateur | Haiti sport network
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row g-2">

			<div class="col-md-12 col-xl-2 col-sm-12">
				{% include "admin/_include/nav.html.twig" %}
			</div>

			<div class="col-lg-8 col-sm-12 col-md-12  text-black mx-lg-3 mx-sm-0 mx-md-3">

				<div class="row bg-dark p-3 mb-2 rounded-3 justify-content-center">

					{% include "admin/club/_include/nav.html.twig" %}
				</div>
				<div class="row justify-content-between">

					<div class="col-6">
						<div class="bg-dark p-2">
							Crée une catégorie
						</div>
						<div class="mb-3 bg-light p-4 mt-2">

							{{ form_widget(cate, {attr: { class: 'form-control' }}) }}

							{{ form_rest(cate) }}

							<button type="submit" class="btn btn-dark w-50 mt-3">Ajouter</button>

							{{ form_end(cate) }}
						</div>
					</div>

					<div class="col-6">
						<div class="card" style="width: 18rem;">
							<div class="card-header">
								Les catégorie
							</div>
							<ul class="list-group list-group-flush">
								<li class="list-group-item">An item</li>
								<li class="list-group-item">A second item</li>
								<li class="list-group-item">A third item</li>
							</ul>
						</div>


					</div>


				</div>

			</div>
		</div>
	</div>


{% endblock %}
