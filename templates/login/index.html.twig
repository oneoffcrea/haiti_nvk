{% extends 'base.html.twig' %}

{% block body %}

	<div class="container mt-5">


		<div class="row justify-content-center bg-light ">
			<div class="col-md-6 bg-secondary rounded p-3">
				<div class="jumbotron jumbotron-fluid">
					<div class="container text-center ">
						<h1 class="fs-2 text-white">Connexion Administrateur</h1>
						<p class="lead">Vous devez vous connecter pour administrer</p>
					</div>
				</div>

				<div class="col-md-6 justify-content-center rounded p-3">

					{% if error %}
						<div class="alert alert-danger">
							{{ error.messageKey|trans(error.messageData, 'security') }}
						</div>
					{% endif %}

					<form action="{{ path('app_login') }}" method="post">

						<div class="mb-3">
							<label for="username" class="form-label">Email :</label>
							<input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required>
						</div>

						<div class="mb-3">
							<label for="password" class="form-label">Password :</label>
							<input type="password" id="password" name="_password" class="form-control" required>
						</div>

						<button type="submit" class="btn btn-dark w-50">Connexion</button>
					</form>
				</div>

			</div>
		</div>
	</div>

{% endblock %}
